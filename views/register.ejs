<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/register.css"> 
    <title>Student Registration</title>
</head>
<body>
    <div class="registration-container">
        <h2>Student Registration</h2>
        <form id="registration-form" action="/auth/register" method="post">
            <fieldset>
                <legend>Personal Details</legend>
                <div class="input-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="input-group">
                    <label for="register">Register as:</label>
                    Student<input type="radio" id="Student" name="register" required>Teacher<input type="radio" id="Teacher" name="register" required>Parent<input type="radio" id="Parent" name="register" required>
                </div>
                <div class="input-group" id="classInput" style="display: none;">
                    <label for="class">Current Class:</label>
                    <input type="number" id="class" name="class1" required>
                </div>
            </fieldset>
            <fieldset>
                <legend>Account Information</legend>
                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>                
                <div class="input-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="input-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="input-group">
                    <label for="confirm_password">Confirm Password:</label>
                    <input type="password" id="password" name="password2" required>
                </div>
            </fieldset>
            <button type="submit">Register</button>
        </form>
        <a href="/auth/login">Login</a>
    </div>

    <script>
        const studentRadio = document.getElementById('Student');
        const classInput = document.getElementById('classInput');

        studentRadio.addEventListener('change', function() {
            if (studentRadio.checked) {
                classInput.style.display = 'block';
            } else {
                classInput.style.display = 'none';
            }
        });
    </script>
</body>
</html>
